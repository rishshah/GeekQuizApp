<Page
    x:Class="CITY_QUIZ.Assets.HowToPlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CITY_QUIZ.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="bg2.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1366" Height="521" FontSize="64" TextAlignment="Center">
    		<Run Text="Answer as many"/>
    		<Run Text=" questions"/>
    		<Run Text=" "/>
    		<Run Text="out of 10 "/>
    		<Run Text="you can in the limited time "/>
    		<LineBreak/>
    		<Run Text="Easy Mode Time limit : 60secs"/>
    		<LineBreak/>
    		<Run Text="Hard Mode Time limit: 45secs"/>
    		<LineBreak/>
    		<Run Text="Score: +100 for each right answer"/>
    		<LineBreak/>
    		<Run Text="            -50 for each wrong answer"/>
    		<LineBreak/>
    		<Run Text="ALL THE BEST"/>
    		<LineBreak/>
    		<Run/>
        </TextBlock>
        <Button x:ConnectionId='1' x:Name="button" Content="Back" HorizontalAlignment="Left" Height="107" Margin="441,615,0,0" VerticalAlignment="Top" Width="507"                      FontSize="64"/>

    </Grid>
</Page>

